  //   z-index: 0;
  //   &::before {
  //     content: '';
  //     position: absolute;
  //     inset: 0;
  //     z-index: -1;
  //     /* Responsive gradient: left half is EAE0D5, right half is 2692AD, stops at 50% */
  //     background: linear-gradient(90deg, #EAE0D5 0%, #EAE0D5 50%, #2692AD 100%);
  //     /* Responsive: stops at 50% of hero section, regardless of image position */
  //     width: 100%;
  //     height: 100%;
  //     pointer-events: none;
  //   }
  // }

  .hero-img {
    border-radius: 50%;
    aspect-ratio: 1/1;
    object-fit: cover;
    width: 100%;
    max-width: 400px;
    height: auto;
    box-shadow: 0 4px 32px 0 rgba(0,0,0,0.10);
    background: #f5f0eb;
    display: block;
    margin-left: auto;
    margin-right: auto;
    object-position: 60% center;
  }
</style>
