---
import Navigation from '../components/Navigation.astro'
import { DarkMode, SkipLink } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'
import { hasVisibleBlogs } from '../utils/hasVisibleBlogs'

const showBlog = await hasVisibleBlogs();

/**
 * Header Component
 *
 * @description A component that displays the header of the website
 */
---

<header>
  <SkipLink />
  <Navigation>
    <li class="menu-item">
      <a href="/">Home</a>
    </li>
    {showBlog && (
      <li class="menu-item">
        <a href="/blog/">Blog</a>
      </li>
    )}
    <li class="menu-item">
      <a href="/portfolio/">Portfolio</a>
    </li>
    <li class="menu-item">
      <a href="/about/">About</a>
    </li>
        <li class="menu-item">
      <a href="/contact/">Contact</a>
    </li>
    <li class="menu-item">
      <a href="/resume/">Resum√©</a>
    </li>
    <li class="menu-item type-icon animate-rotate">
      <a href="https://github.com/brysonbest" target="_blank" rel="noopener noreferrer">
        <Icon name="lucide:github" />
        <span class="sr-only">Go to the GitHub page</span>
      </a>
    </li>
        <li class="menu-item type-icon animate-rotate">
      <a href="https://www.linkedin.com/in/bryson-best/" target="_blank" rel="noopener noreferrer">
      <Icon name="lucide:linkedin" />
        <span class="sr-only">Go to the LinkedIn page</span>
      </a>
    </li>
    <li class="menu-item type-icon animate-rotate">
      <DarkMode>
        <Icon name="lucide:moon" slot="light" />
        <Icon name="lucide:sun" slot="dark" />
      </DarkMode>
    </li>
  </Navigation>
</header>

<style lang="scss" is:global>
  header {
    .type-icon {
      display: block;
      margin-inline: -7px;

      svg {
        inline-size: 30px;
        block-size: 30px;
      }
    }
  }
</style>
